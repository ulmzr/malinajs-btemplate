{
  "image": "mcr.microsoft.com/vscode/devcontainers/base",
  "postCreateCommand": "bun install && bun run build",
  "postStartCommand": "bun run start",
  "features": {
    "ghcr.io/audacioustux/devcontainers/bun:1": {}
  },
  "forwardPorts": [3000],
  "portsAttributes": {
    "3000": {
      "label": "App"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": ["esbenp.prettier-vscode"]
    }
  }
}
